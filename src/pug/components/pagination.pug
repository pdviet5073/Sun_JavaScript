.pagination 
    .pagination__container
        form(action="#" id="pagination") 
            ul.pagination__content
                - var pagination = ['Trang đầu', '1', '2', '3', '4', 'Trang cuối']
                    each item, index in pagination 
                        li(class=`pagination__item ${index==1 ? 'pagination__item-active' : ''}`) 
                            button.pagination__button.button(type='button')= item
                            